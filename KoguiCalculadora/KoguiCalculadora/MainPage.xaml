<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KoguiCalculadora.MainPage">

    <StackLayout Padding="16" >

        <Entry 
            x:Name="numeroUmTxt"
            Placeholder="Digite um numero"
            FontSize="Large"
            Keyboard="Numeric"/>

        <Entry 
            x:Name="numeroDoisTxt"
            Placeholder="Digite outro numero"
            FontSize="Large"
            Keyboard="Numeric"/>

        <Button 
            x:Name="SomarBtn"
            Clicked="SomarBtn_Clicked"
            Text="Somar"
            Margin="0, 10, 0, 0 "/>

        <Label 
            x:Name="ResultadoTxt"
            Text="Resultado"
            FontSize="Large"/>

    </StackLayout>

</ContentPage>
